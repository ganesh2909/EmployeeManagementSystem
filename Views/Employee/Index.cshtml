@model List<EmployeeManagementSystem.Models.Employee>

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Join Date</th>
            <th>Phone Number</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.Name</td>
                <td>@employee.Department.DepartmentName</td>
                <td>@employee.JoinDate.ToShortDateString()</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@employee.EmployeeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
