@model EmployeeManagementSystem.Models.Employee

<h2>Delete Employee</h2>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.EmployeeID" method="post">
    @Html.AntiForgeryToken()

    <div class="alert alert-danger">
        <p>Are you sure you want to delete this employee?</p>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.EmployeeID</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <!-- Add other details fields for JoinDate, PhoneNumber, and Salary -->
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </div>
</form>
