@model EmployeeManagementSystem.Models.Employee

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-route-id="@Model.EmployeeID" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="EmployeeID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentID"></label>
        <select asp-for="DepartmentID" asp-items="@(new SelectList(ViewBag.Departments, "DepartmentID", "DepartmentName", Model.DepartmentID))" class="form-control">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentID" class="text-danger"></span>
    </div>

    <!-- Add other input fields for JoinDate, PhoneNumber, and Salary -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
